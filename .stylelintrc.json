{
  "extends": ["stylelint-config-standard"],
  "rules": {
    "property-no-unknown": [true, {
      "ignoreProperties": ["stopColor", "stopOpacity"]
    }],
    "at-rule-no-unknown": [true, {
      "ignoreAtRules": [
        "tailwind",
        "apply",
        "variants",
        "responsive",
        "screen",
        "plugin",
        "source",
        "import",
        "theme"
      ]
    }],
    "import-notation": null
  }
}
